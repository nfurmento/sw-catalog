{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$defs": {
    "stringOrStringArray": {
      "oneOf": [
        { "type": "string" },
        {
          "type": "array",
          "items": { "type": "string" }
        }
      ]
    }
  },
  "type": "object",
  "required": ["projects"],
  "properties": {
    "projects": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "name": {
            "description": "The name of the project.",
            "type": "string"
          },
          "description": {
            "description": "A detailed description of the project.",
            "type": "string"
          },
          "discussion": {
            "description": "A URL or reference to project discussions.",
            "$ref": "#/$defs/stringOrStringArray"
          },
          "documentation": {
            "description": "A URL or reference to the project documentation.",
            "$ref": "#/$defs/stringOrStringArray"
          },
          "guix_package": {
            "description": "Information about the Guix package.",
            "$ref": "#/$defs/stringOrStringArray"
          },
          "spack_package": {
            "description": "A URL to the Spack package.",
            "$ref": "#/$defs/stringOrStringArray"
          },
          "self_assessment": {
            "description": "A URL to a form containing the Software Guidelines Self-Assessment",
            "$ref": "#/$defs/stringOrStringArray"
          }
        },
        "required": [
          "name",
          "description"
        ]
      }
    }
  }
}
